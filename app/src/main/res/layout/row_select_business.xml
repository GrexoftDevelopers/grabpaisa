<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_selector_bg"
    android:layout_margin="5dp">


    <TextView
        android:id="@+id/txt_app_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:padding="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/btn_download"
        android:text="Amazon app instaled"
        android:textColor="@color/textColor"
        android:textSize="16dp" />

    <Button
        android:id="@+id/btn_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@color/textColor"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="INSTAL"
        android:textColor="#ffffff" />

</RelativeLayout><!-- From: file:/E:/08102015/Custom3r/app/src/main/res/layout/row_select_business.xml -->